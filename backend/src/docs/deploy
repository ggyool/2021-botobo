cd ~ &&
rm -rf 2021-botobo &&
git clone --recurse-submodules https://github.com/ggyool/2021-botobo.git &&
cd 2021-botobo/backend &&
./gradlew copyDev &&
./gradlew build -x test &&
sudo docker rmi botobo/backend;
sudo docker build --build-arg JAR_FILE=build/libs/\*SNAPSHOT.jar -t botobo/backend . &&
sudo docker rm backend;
sudo docker run -p 443:8080 --name backend botobo/backend

sudo docker run -e "SPRING_PROFILES_ACTIVE=dev" -p 443:8080 --name backend botobo/backend

sudo docker run -d -e "SPRING_PROFILES_ACTIVE=dev" -p 80:8080 botobo/backend

